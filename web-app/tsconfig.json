{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "types": ["node"],

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "sourceRoot": "/",
    "inlineSources": true,
    "sourceMap": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@Src/*": [
        "./src/*"
      ],
      "@Shared/*": [
        "../shared/*"
      ],
      "@Root/*": [
        "./*"
      ]
    },
  },
  "references": [
    { "path": "./tsconfig.node.json" },
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "../shared"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "../common/dist",
  ]
}
